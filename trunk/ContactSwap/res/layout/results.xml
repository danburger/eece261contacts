<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
         
    
    <TextView  
        android:layout_height="wrap_content" android:textColor="#F00" android:layout_gravity="center" android:layout_width="wrap_content" android:typeface="normal" android:textSize="30px" android:text="Search Results"/>     
              
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:width="320px" android:gravity="center" android:id="@+id/tvSearchName" android:text="Name" android:textSize="30px"></TextView><Button android:layout_height="wrap_content" android:layout_width="320px" android:layout_gravity="center" android:id="@+id/btnRemove" android:text="Remove Search"/><Button android:layout_height="wrap_content" android:id="@+id/btnReturn" android:layout_width="320px" android:layout_gravity="center" android:text="Return to Searches"/><ListView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#333" android:id="@+id/lvResults"></ListView>    






</LinearLayout>
